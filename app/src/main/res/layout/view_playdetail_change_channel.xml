<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clv_mune"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    >
    <LinearLayout
        android:id="@+id/llt_view1"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="#cc000000"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/tv_channel_1"
            style="@style/playDetail_channel_textview"
            android:text="央视频道"
            android:layout_marginTop="16dp"
            />

        <TextView
            android:id="@+id/tv_channel_2"
            style="@style/playDetail_channel_textview"
            android:text="卫视频道"
            />

        <TextView
            android:id="@+id/tv_channel_3"
            style="@style/playDetail_channel_textview"
            android:text="购物频道"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/tv_channel_4"
            style="@style/playDetail_channel_textview"
            android:text="省内频道"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/tv_channel_10"
            style="@style/playDetail_channel_textview"
            android:text="地方频道"
            />

        <TextView
            android:id="@+id/tv_channel_5"
            style="@style/playDetail_channel_textview"
            android:nextFocusRight="@+id/rlv_playdetail_channel_deatil"
            android:text="体育赛事"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/tv_channel_6"
            style="@style/playDetail_channel_textview"
            android:text="少儿频道"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/tv_channel_7"
            style="@style/playDetail_channel_textview"
            android:text="影视轮播"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/tv_channel_8"
            style="@style/playDetail_channel_textview"
            android:text="综艺频道"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/tv_channel_9"
            style="@style/playDetail_channel_textview"
            android:text="测试频道"
            />
    </LinearLayout>

    <com.xk.xkds.component.view.ScollRecycleView
        android:id="@+id/rlv_playdetail_channel_deatil"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/llt_view1"
        android:layout_toEndOf="@+id/llt_view1">
    </com.xk.xkds.component.view.ScollRecycleView>

</RelativeLayout>
