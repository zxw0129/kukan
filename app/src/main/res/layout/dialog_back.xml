<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    >

    <RelativeLayout
        android:id="@+id/rlt_view1"
        android:layout_width="426dp"
        android:layout_height="226dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_back_dialog"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_icon_ad_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:src="@mipmap/ic_tyzb"
            />

        <TextView
            android:id="@+id/tv_ad_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@id/iv_icon_ad_icon"
            android:text="体育直播"
            android:textColor="#ffffff"
            android:textSize="24sp"
            />

        <com.xk.xkds.component.view.AlwaysMarqueeScrollView
            android:id="@+id/tv_ad_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ad_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/iv_icon_ad_icon"
            android:ellipsize="marquee"
            android:focusable="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="看体育赛事,就用体育直播"
            android:textColor="#ffffff"
            android:textSize="21sp"
            />

        <TextView
            android:id="@+id/tv_ad_install"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_ad_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/iv_icon_ad_icon"
            android:background="@drawable/select_back_text_bg"
            android:focusable="true"
            android:gravity="center"
            android:text="安装"
            android:textColor="#ffffff"
            android:textSize="21sp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="426dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlt_view1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_back_Yes"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/select_back_text_bg"
            android:focusable="true"
            android:gravity="center"
            android:text="退出"
            android:textColor="#ffffff"
            android:textSize="21sp"
            />

        <TextView
            android:id="@+id/tv_back_no"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@id/rlt_view1"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@id/tv_back_Yes"
            android:background="@drawable/select_back_text_bg"
            android:focusable="true"
            android:gravity="center"
            android:text="免责声明"
            android:textColor="#ffffff"
            android:textSize="21sp"
            />
    </LinearLayout>


</RelativeLayout>